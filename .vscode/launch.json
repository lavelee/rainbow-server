{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug",
      "type": "pwa-node",
      "request": "launch",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
      "skipFiles": ["<node_internals>/**"],
      "args": [
        "--inspect",
        "--no-notify",
        "${workspaceFolder}/src/server.ts"
      ]
    }
  ]
}